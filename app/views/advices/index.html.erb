<div class="advice-wrapper">
	<div class="container">
		<div class="row">
			<div class="col-md-10 col-md-offset-1">
				<div class="well">
					<div class="advice">
						<div class="row">
							<div class="col-md-12">
							<h1>The fucking top 10</h1>
							<hr>

							<ul>
								<% @advices.limit(10).order('vote_total DESC').each do |a| %>	
									<h2>
										<em>GFCA #<%= a.id %></em>
										(<%= a.vote_up %> Upvotes)
									</h2>
									<h1 class="big"><%= link_to a.body, a %></h1>
									<% if a.twitter_handle.present? %>
										<div class="row">
											<div class="col-md-3 col-md-offset-9">
												<h4><em> by <%= link_to a.twitter_handle, "https://www.twitter.com/#{a.twitter_handle}" %> </em></h4>
											</div>
										</div>
									<% end %>
									<hr>
								<% end %>
							</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
